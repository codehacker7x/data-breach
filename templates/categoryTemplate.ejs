<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= categoryPagesTitle.prefix %>
            <%= category.categoryName %>
                <%= categoryPagesTitle.suffix %>
    </title>
    <meta name="description"
        content="Learn about <%= category.categoryName %> and its application in various programming languages. Discover how it maintains data integrity across diverse coding environments.">
    <%- include('/head.ejs') %>
</head>

<body>
    <%- include("/header.ejs") %>
        <main class="category-page">
            <section class="hero">
                <div>
                    <ul class="breadcrumb">
                        <li><a href="/">Home</a></li>
                        <li>/</li>
                        <li>
                            <%= category.categoryName %>
                        </li>
                    </ul>
                    <div class="title header">
                        <h1>
                            <%= category.categoryName %>
                        </h1>
                    </div>
                </div>
            </section>
            <section class="category-section page-content">
                <div>
                    <div class="card-wrap">

                        <ul>
                            <% category.pages.forEach(function(page) { %>
                                <li class="card padding  rounded"><a href="<%= page.slug %>">
                                        <%= page.pageTitle %>
                                    </a></li>
                                <% }); %>
                        </ul>
                    </div>
                </div>
            </section>


        </main>
        <%- include("/footer.ejs") %>
</body>

</html>